<UserControl x:Class="Kubmill.Controls.StatGauge"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" d:DesignHeight="160" d:DesignWidth="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="titleLabel" FontWeight="Bold" HorizontalAlignment="Center"/>
        <ui:ProgressRing x:Name="gaugeDial" Height="100" Width="100" Margin="10" Grid.Row="1" Progress="0">
            <ui:ProgressRing.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1" CenterX="50" CenterY="50"/>
                    <RotateTransform Angle="-90" CenterX="50" CenterY="50"/>
                </TransformGroup>                
            </ui:ProgressRing.LayoutTransform>
        </ui:ProgressRing>
        <TextBlock x:Name ="statLabel"  FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
    </Grid>
</UserControl>
